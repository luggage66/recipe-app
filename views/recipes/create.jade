extends ../layout

block vars
	- var backLink = '/recipes'
	- var backLinkText = 'Search Results'

block content
	.container
		form(method="post")
			input.form-control(name="name")
			input.form-control(name="picture",type="file")
			button.btn.btn-success.navbar-btn(type='submit')
				span.glyphicon.glyphicon-floppy-saved
				|  Save

	script
		:coffeescript
			$ ->
				$('button').click ->
					$('form').submit()